<?xml version="1.0" ?>

<robot name="experiment">
    <!-- Materials -->
    <material name="yellow">
        <color rgba="1 1 0 0.5"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 0.5"/>
    </material>
    <material name="blue">
        <color rgba="0 0 1 0.5"/>
    </material>
    <material name="white">
        <color rgba="0 0 0 0.5"/>
    </material>
    <material name="black">
        <color rgba="1 1 1 0.5"/>
    </material>

    <!-- Gazebo tags -->
    <gazebo reference="base_footprint">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_laser">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="front_caster">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="rear_caster">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
    </gazebo>
    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
    </gazebo>
    <gazebo reference="left_wheel">
        <mu1>1.0</mu1>
        <mu2>1.0</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="joint_base_link_front_caster">
        <preserveFixedJoint>true</preserveFixedJoint> <!-- Don't fuse to base -->
    </gazebo>

    <gazebo reference="joint_base_link_rear_caster">
        <preserveFixedJoint>true</preserveFixedJoint> <!-- Don't fuse to base -->
    </gazebo>

    <gazebo reference="joint_base_link_front_laser">
        <preserveFixedJoint>true</preserveFixedJoint> <!-- Don't fuse to base -->
    </gazebo>

    <!-- Differential drive plugin -->
    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>joint_base_link_left_wheel</leftJoint>
            <rightJoint>joint_base_link_right_wheel</rightJoint>
            <wheelSeparation>1.66</wheelSeparation> <!-- TODO: update for mesh tires -->
            <wheelDiameter>0.05</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame> <!-- TODO: this doesn't need to be base_footprint, right? -->
        </plugin>
    </gazebo>

    <!-- Control plugin -->
    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/robot</robotNamespace>
            <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
        </plugin>
    </gazebo>

    <!-- Laser scan -->
    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize> <!-- Simulate rays -->
            <update_rate>20</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-1.570796</min_angle> <!-- ~ -90 deg -->
                        <max_angle>1.570796</max_angle> <!-- ~ 90 deg -->
                    </horizontal>
                </scan>
                <range> <!-- Should be outside "devide" cylinder! --> <!-- TODO: check! -->
                    <min>0.20</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/laser/scan</topicName>
                <frameName>sensor_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>


    <!-- Links -->

    <!--Link: base_footprint-->
    <link name="base_footprint">
        <visual>
            <geometry>
                <cylinder length="0.001" radius="0.25"/>
            </geometry>
            <material name="yellow" />
        </visual>
    </link>

    <!--Link: base_link-->
    <link name="base_link">
        <inertial>
            <mass value="24.926"/>
            <inertia ixx="0.5764" ixy="0" ixz="0" iyy="0.5764" iyz="0" izz="0.7789"/>
        </inertial>

        <collision>
            <!-- <origin xyz="0 0 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
                <!-- <sphere radius=""/> -->
            </geometry>
        </collision>

        <visual>
            <!-- <origin xyz="1 1 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.3" radius="0.25"/>
                <!-- <sphere radius=""/> -->
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <!--Link: right_wheel-->
    <link name="right_wheel">
        <inertial>
            <mass value="0.021"/>
            <inertia ixx="0.000004" ixy="0" ixz="0" iyy="0.000004" iyz="0" izz="0.000007"/>
        </inertial>

        <collision>
            <!-- <origin xyz="0 0 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
        </collision>

        <visual>
            <!-- <origin xyz="1 1 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
            <material name="red" />
        </visual>
    </link>

    <!--Link: left_wheel-->
    <link name="left_wheel">
        <inertial>
            <mass value="0.021"/>
            <inertia ixx="0.000004" ixy="0" ixz="0" iyy="0.000004" iyz="0" izz="0.000007"/>
        </inertial>

        <collision>
            <!-- <origin xyz="0 0 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
        </collision>

        <visual>
            <!-- <origin xyz="1 1 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
            <material name="red" />
        </visual>
    </link>

    <!--Link: front_caster-->
    <link name="front_caster">
        <inertial>
            <mass value="0.006"/>
            <inertia ixx="0.0000005" ixy="0" ixz="0" iyy="0.0000005" iyz="0" izz="0.0000005"/>
        </inertial>

        <!-- Outer wheel -->
        <collision>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="blue" />
        </visual>

        <!-- Inner wheel -->
        <collision>
            <origin xyz="0 0 -0.015" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="white" />
        </visual>
    </link>

    <!--Link: rear_caster-->
    <link name="rear_caster">
        <inertial>
            <mass value="0.006"/>
            <inertia ixx="0.0000005" ixy="0" ixz="0" iyy="0.0000005" iyz="0" izz="0.0000005"/>
        </inertial>

        <!-- Outer wheel -->
        <collision>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0.005" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="blue" />
        </visual>

        <!-- Inner wheel -->
        <collision>
            <origin xyz="0 0 -0.015" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 -0.01" rpy="0 0 0"/>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="white" />
        </visual>
    </link>

    <!--Link: front_laser-->
    <link name="front_laser">
        <inertial>
            <mass value="0.021"/>
            <inertia ixx="0.000004" ixy="0" ixz="0" iyy="0.000004" iyz="0" izz="0.000007"/>
        </inertial>

        <collision>
            <!-- <origin xyz="0 0 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
        </collision>

        <visual>
            <!-- <origin xyz="1 1 0.15" rpy="0 0 0"/> -->
            <geometry>
                <cylinder length="0.025" radius="0.025"/>
                <!-- <sphere radius=""/> -->
            </geometry>
            <material name="black" />
        </visual>
    </link>


    <!-- Joints -->
    <!-- <joint name="" type="">
        <origin xyz="0 0 0" rpy="0 0 0" />
        <parent link="" />
        <child link="" />
        <axis xyz="0 0 0" rpy="0 0 0" />
        <limit effort="0" velocity="0" />
        <joint_properties damping="0" friction="0" />
    </joint> -->

    <!--Joint: base_footprint/base_link-->
    <joint name="joint_base_footprint_base_link" type="fixed">
        <origin xyz="0 0 0.15" rpy="0 0 0" />
        <parent link="base_footprint" />
        <child link="base_link" />
    </joint>

    <!--Joint: base_link/right_wheel-->
    <joint name="joint_base_link_right_wheel" type="continuous">
        <origin xyz="0 -0.2 -0.15" rpy="1.5708 0 0" />
        <parent link="base_link" />
        <child link="right_wheel" />
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="1000" velocity="1000" /> <!-- ? -->
        <joint_properties damping="1.0" friction="1.0" /> <!-- ? -->
    </joint>

    <!--Joint: base_link/left_wheel-->
    <joint name="joint_base_link_left_wheel" type="continuous">
        <origin xyz="0 0.2 -0.15" rpy="1.5708 0 0" />
        <parent link="base_link" />
        <child link="left_wheel" />
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="1000" velocity="1000" /> <!-- ? -->
        <joint_properties damping="1.0" friction="1.0" /> <!-- ? -->
    </joint>

    <!--Joint: base_link/front_caster-->
    <joint name="joint_base_link_front_caster" type="fixed">
        <origin xyz="0.1 0.0 -0.15" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="front_caster" />
        <joint_properties damping="1.0" friction="0.0" /> <!-- ? -->
    </joint>

    <!--Joint: base_link/rear_caster-->
    <joint name="joint_base_link_rear_caster" type="fixed">
        <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0" />
        <parent link="base_link" />
        <child link="rear_caster" />
        <joint_properties damping="1.0" friction="0.0" /> <!-- ? -->
    </joint>

    
    <!--Joint: base_link/front_laser-->
    <joint name="joint_base_link_front_laser" type="fixed">
        <origin xyz="0.25 0.0 0.075" rpy="3.14159 0 0" />
        <parent link="base_link" />
        <child link="front_laser" />
    </joint>
</robot>